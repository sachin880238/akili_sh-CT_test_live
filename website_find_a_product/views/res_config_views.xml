<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited form view of Website -->
    <record id="view_website_config_settings_ext" model="ir.ui.view">
        <field name="name">Website settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_checkout_settings']" position="after">
                <h2>Find A Product-Pagination</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="checkout_assignation_setting">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row">
                                    <label class="o_light_label col-lg-3" for="ppp_on_find"/>
                                    <field name="ppp_on_find" widget="selection"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
