                    </div>
                    <div class="modal-body">
                        <form action="/shop/save_cart" method="post" role="form">
                            <input name="csrf_token" t-att-value="request.csrf_token()" type="hidden"/>
                            <div class="form-group">
                                <label for="cmnts">Enter a brief description or project reference
                                    to help you identify this cart.</label>
                                <input class="form-control" id="cmnts" name="save_note" rows="6" type="text"/>
                            </div>
                            <!-- Modal Footer -->
                            <div class="modal-footer">
                                <button class="btn btn-primary a-submit" type="submit">Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </template>
