<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="website_product_detail_page" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" href="/website_product_detail_page/static/src/css/website_product_detail_page.scss"/>
        </xpath>    
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/website_product_detail_page/static/src/js/website_product_detail_page.js"></script>
        </xpath>

        <xpath expr="." postion="inside">
            <script src="/website_product_detail_page/static/src/js/imagezoom.js" type="text/javascript"/>
        </xpath>
    </template>
</odoo>
